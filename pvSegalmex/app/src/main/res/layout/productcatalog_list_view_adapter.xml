<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_125"
    android:layout_marginBottom="@dimen/dip_10"
    app:cardBackgroundColor="@color/orangePantone"
    app:cardCornerRadius="@dimen/dip_10"
    app:cardElevation="@dimen/dip_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"

        >
        <LinearLayout
            android:layout_marginTop="@dimen/dip_2"
            android:padding="5dp"
            android:layout_marginBottom="@dimen/dip_5"
            android:layout_width="0dp"
            android:layout_height="@dimen/dip_120"
            android:orientation="vertical"
            android:layout_weight="40"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/style_dialog">
                <ImageView
                    android:layout_marginTop="@dimen/dip_6"
                    android:layout_marginLeft="@dimen/dip_6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_90"
                    android:id="@+id/imvProductGrid"
                    android:layout_marginRight="@dimen/dip_6"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dip_20"
            android:orientation="vertical"
            android:padding="@dimen/dip_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvProductName"
                    android:layout_width="0dp"
                    android:layout_weight="70"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dip_13" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvProductUnit"
                    android:layout_width="0dp"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dip_13" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dip_8"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="30"
                    android:gravity="end"
                    android:text="$"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dip_13" />

                <TextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="55"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dip_13" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProductGranel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvProductUUID"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="0dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>