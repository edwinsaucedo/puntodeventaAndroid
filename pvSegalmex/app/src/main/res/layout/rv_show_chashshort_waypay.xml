<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dip_10"
    android:background="@color/white"
    android:padding="@dimen/dip_5"
    android:layout_marginTop="@dimen/dip_25"
    app:cardCornerRadius="@dimen/dip_12"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_170"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dip_2">

            <TextView
                android:id="@+id/tvWayPayDescriptionCashShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dip_5"
                android:layout_marginBottom="@dimen/dip_5"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/segoeui"
                android:maxLines="1"
                android:paddingLeft="@dimen/dip_6"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="@string/edtCashShortAmountCap"
                android:textColor="@color/bluePantone"
                android:textSize="@dimen/dip_13" />

            <TextView
                android:id="@+id/tvWayPayAmountCapCashShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/segoeui"
                android:maxLines="1"
                android:paddingLeft="@dimen/dip_6"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/bluePantone"
                android:textSize="@dimen/dip_13" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_2"
                android:background="@color/windowBackground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/segoeui"
                android:maxLines="1"
                android:paddingLeft="@dimen/dip_6"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="@string/edtCashShortAmountCal"
                android:textColor="@color/bluePantone"
                android:textSize="@dimen/dip_13" />

            <TextView
                android:id="@+id/tvWayPayAmountCalCashShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/segoeui"
                android:maxLines="1"
                android:paddingLeft="@dimen/dip_6"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/bluePantone"
                android:textSize="@dimen/dip_13" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_2"
                android:background="@color/windowBackground" />

            <TextView
                android:id="@+id/tvDiferenceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/segoeui"
                android:maxLines="1"
                android:paddingLeft="@dimen/dip_6"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="@string/edtCashShortCambio"
                android:textColor="@color/bluePantone"
                android:textSize="@dimen/dip_13" />

            <TextView
                android:id="@+id/tvWayPayDifferenceCashShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/segoeui"
                android:maxLines="1"
                android:paddingLeft="@dimen/dip_6"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/bluePantone"
                android:textSize="@dimen/dip_13" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
