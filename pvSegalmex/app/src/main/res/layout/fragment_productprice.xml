<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:padding="@dimen/dip_10"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dip_10"
        tools:context=".view.CrudProductView">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dip_10"
            app:cardCornerRadius="@dimen/dip_7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dip_5"
                    android:padding="@dimen/dip_5"
                    android:text="@string/tv_basePrice"
                    android:textColor="@color/bluePantone"
                    android:textSize="@dimen/dip_13"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dip_5">

                            <EditText
                                android:id="@+id/edtProductPricePrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/edtProductPricePrice"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/bluePantone"
                                android:textSize="@dimen/dip_13"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dip_5">

                            <EditText
                                android:id="@+id/edtProductPricePercentage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/edtProductPricePercentage"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:enabled="false"
                                android:singleLine="true"
                                android:textColor="@color/bluePantone"
                                android:textSize="@dimen/dip_13"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dip_5">

                            <EditText
                                android:id="@+id/edtProductPriceCost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/edtProductPriceCost"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:enabled="false"
                                android:textColor="@color/bluePantone"
                                android:textSize="@dimen/dip_13"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dip_5"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSaveProductPrice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:layout_marginTop="@dimen/dip_10"
            android:textSize="@dimen/dip_15"
            android:background="@drawable/degradado_buttons"
            android:text="@string/btnSaveBasePrice"
            android:textColor="@color/white" />




<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/testId"
    />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dip_10"
            app:cardCornerRadius="@dimen/dip_7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dip_5"
                    android:padding="@dimen/dip_5"
                    android:textSize="@dimen/dip_13"
                    android:text="@string/tv_priceWholesale"
                    android:textColor="@color/bluePantone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dip_5">

                            <EditText
                                android:id="@+id/edtProductPricePriceMayoreo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/edtProductPricePrice"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:textSize="@dimen/dip_13"
                                android:singleLine="true"
                                android:textColor="@color/bluePantone" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dip_5">

                            <EditText
                                android:id="@+id/edtProductPricePercentageMayoreo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/edtProductPricePercentage"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:textSize="@dimen/dip_13"
                                android:enabled="false"
                                android:singleLine="true"
                                android:textColor="@color/bluePantone" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dip_5">

                            <EditText
                                android:id="@+id/edtProductPriceCostMayoreo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/edtProductPriceCost"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:textSize="@dimen/dip_13"
                                android:singleLine="true"
                                android:enabled="false"
                                android:textColor="@color/bluePantone" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dip_5">

                            <EditText
                                android:id="@+id/edtProductPriceQuantityMayoreo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/edtProductPriceQuantity"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:textSize="@dimen/dip_13"
                                android:singleLine="true"
                                android:textColor="@color/bluePantone" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnShowdataMayoreo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:textColor="@color/white"
            android:textSize="@dimen/dip_15"
            android:background="@drawable/degradado_buttons"
            android:text="@string/btnSaveWholePirce"
            />


    </LinearLayout>



</ScrollView>