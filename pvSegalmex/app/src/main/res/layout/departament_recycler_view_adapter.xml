<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dip_10"
    android:padding="@dimen/dip_5"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="@color/orangePantone"
    android:layout_marginBottom="@dimen/dip_10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:orientation="vertical"
        android:padding="@dimen/dip_5">

        <TextView
            android:id="@+id/tvDepartamentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_10"
            android:layout_marginStart="@dimen/dip_5"
            android:layout_marginEnd="@dimen/dip_5"
            android:textColor="@color/white"
            android:textSize="@dimen/dip_13" />
    </LinearLayout>
</android.support.v7.widget.CardView>
