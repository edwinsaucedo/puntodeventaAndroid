<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_110"
    android:layout_marginBottom="@dimen/dip_10"
    android:padding="@dimen/dip_5"
    app:cardBackgroundColor="@color/orangePantone"
    app:cardCornerRadius="@dimen/dip_10"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_65"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dip_3"
            android:layout_weight="30"
            android:orientation="vertical"
            android:padding="@dimen/dip_5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_3"
                android:text="@string/dateCashShortview"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />

            <TextView
                android:id="@+id/tvDateReceiptMerchandise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_3"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:orientation="vertical"
            android:padding="@dimen/dip_5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_3"
                android:text="@string/edtAmountWithdrawal"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />

            <TextView
                android:id="@+id/tvTotalReceiptMerchandise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_3"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dip_3"
            android:layout_weight="40"
            android:orientation="vertical"
            android:padding="@dimen/dip_5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_3"
                android:text="@string/numberarticlesReceiptMerchandise"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />

            <TextView
                android:id="@+id/tvArticlesReceiptMerchandise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_3"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_70"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:orientation="vertical"
            android:padding="@dimen/dip_5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_2"
                android:text="@string/proveder"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:orientation="vertical"
            android:padding="@dimen/dip_5">

            <TextView
                android:id="@+id/tvProviderMerchandise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_1"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
