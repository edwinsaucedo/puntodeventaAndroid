<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dip_10"
    android:padding="@dimen/dip_5"
    app:cardBackgroundColor="@color/orangePantone"
    app:cardCornerRadius="@dimen/dip_10"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_100"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:paddingBottom="@dimen/dip_6"
            android:orientation="vertical"
            android:padding="@dimen/dip_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dip_6"
                android:background="@drawable/style_dialog"
                android:padding="@dimen/dip_6">

                <ImageView
                    android:id="@+id/imvClient"
                    android:layout_width="@dimen/dip_70"
                    android:layout_height="@dimen/dip_75"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dip_30"
                    android:paddingBottom="@dimen/dip_6" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="vertical"
            android:padding="@dimen/dip_5">

            <TextView
                android:layout_marginTop="@dimen/dip_15"
                android:id="@+id/tvClientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_5"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />

            <TextView
                android:id="@+id/tvClientCurp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_5"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
