<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dip_300"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style_linear_dialog"
            android:gravity="center"
            android:text="Ingrese la cantidad del producto"
            android:textColor="@color/white"
            android:textSize="@dimen/dip_16" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_5"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/dialogDescriptionProduct"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_2"
            android:background="@color/orangePantone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_2"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:padding="3dp"
                android:src="@drawable/bag" />

            <TextView
                android:id="@+id/dialogDescriptionGranel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:paddingLeft="@dimen/dip_10"
                android:text="Name"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_5"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/dialogCodeProduct"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_2"
            android:background="@color/orangePantone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_2"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:padding="3dp"
                android:src="@drawable/barcodee" />

            <TextView
                android:id="@+id/dialogCodeGranel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:padding="@dimen/dip_5"
                android:paddingLeft="@dimen/dip_10"
                android:text="162233"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_5"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/dialogPriceProduct"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_2"
            android:background="@color/orangePantone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_2"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:padding="3dp"
                android:src="@drawable/price" />

            <TextView
                android:id="@+id/dialogCostGranel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:padding="@dimen/dip_5"
                android:paddingLeft="@dimen/dip_10"
                android:text="$250"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dip_20"
        android:layout_marginBottom="@dimen/dip_20"
        android:layout_weight="100"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dip_20"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_weight="30"
            android:text="@string/edtProductPriceQuantity"
            android:textSize="@dimen/dip_13" />

        <EditText
            android:id="@+id/quantityProductDetailGranel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:focusable="auto"
            android:gravity="center"
            android:hint="#"
            android:inputType="numberDecimal"
            android:textSize="@dimen/dip_13" />

        <TextView
            android:id="@+id/tvUnitMeasure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_20"
            android:layout_weight="30"
            android:textSize="@dimen/dip_13" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30">

                <Button
                    android:id="@+id/dialogCancelGranel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dip_20"
                    android:background="@drawable/buttons_dialog"
                    android:text="@string/dialogCancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dip_13"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30">

                <Button
                    android:id="@+id/dialogOkGranel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/dip_20"
                    android:background="@drawable/buttons_dialog"
                    android:text="@string/dialogOk"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dip_13"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>