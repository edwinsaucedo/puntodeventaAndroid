<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dip_160"
    android:layout_height="@dimen/dip_200"
    android:layout_margin="6dp"
    android:layout_marginBottom="@dimen/dip_9"
    android:padding="@dimen/dip_5"
    app:cardBackgroundColor="@color/orangePantone"
    app:cardCornerRadius="@dimen/dip_10"
    app:cardElevation="@dimen/dip_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dip_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/style_dialog"
            android:orientation="vertical"
            android:padding="@dimen/dip_5">

            <ImageView
                android:id="@+id/imvProductGrid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_90"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="70"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />

            <TextView
                android:id="@+id/tvProductUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="30"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dip_8"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="40"
                android:gravity="end"
                android:text="$"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="55"
                android:gravity="start"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProductGranel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvProductUUID"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="0dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>