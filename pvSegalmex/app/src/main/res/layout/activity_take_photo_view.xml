<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@color/white">
        <LinearLayout
                android:background="@color/orangePantone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_50"
                android:padding="@dimen/dip_5"
                android:weightSum="100"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/imvBack"
                    android:padding="@dimen/dip_10"
                    android:src="@drawable/arrow_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    />
                <TextView
                    android:text="@string/addPhoto"
                    android:textSize="@dimen/sp_20"
                    android:id="@+id/tvTitleViewer"
                    android:textColor="@color/bluePantone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginStart="@dimen/dip_10"
                    android:layout_marginEnd="@dimen/dip_10"
                    />
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnDone"
                    android:src="@drawable/save"
                    android:layout_weight="20"
                    android:layout_gravity="center"
                    app:fabSize="mini"
                />

            </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@drawable/background_rounded_white"
                android:layout_marginTop="@dimen/dip_20"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/imvPhotoViewer"
                    android:layout_marginTop="@dimen/dip_10"
                    android:layout_width="@dimen/dip_150"
                    android:layout_height="@dimen/dip_150"
                    android:src="@drawable/ic_photo_camera_black_24px"
                    android:scaleType="centerCrop"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_marginStart="@dimen/dip_50"
                    android:layout_marginEnd="@dimen/dip_50"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnTakePhoto"
                        android:textSize="@dimen/dip_15"
                        android:background="@drawable/degradado_buttons_gray"
                        android:textColor="@color/white"
                        android:text="@string/takePhoto"
                    />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
