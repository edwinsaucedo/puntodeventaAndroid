<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dip_120"
    android:layout_height="@dimen/dip_120"
    android:layout_margin="6dp"
    android:layout_marginBottom="@dimen/dip_9"
    android:padding="@dimen/dip_5"
    android:id="@+id/itemWayPay"
    app:cardBackgroundColor="@color/orangePantone"
    app:cardCornerRadius="@dimen/dip_10"
    app:cardElevation="@dimen/dip_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dip_5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:layout_gravity="center"
            android:id="@+id/imvImageWayPaySales"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dip_3">

            <TextView
                android:id="@+id/tvWayPayDescriptionSales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>