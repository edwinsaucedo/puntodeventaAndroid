<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dip_10"
    android:padding="@dimen/dip_5"
    app:cardBackgroundColor="@color/orangePantone"
    app:cardCornerRadius="@dimen/dip_10"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_77"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dip_5"
            android:layout_weight="50"
            android:orientation="vertical"
            android:padding="@dimen/dip_5">

            <TextView
                android:id="@+id/tvUserCashShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_5"
                android:textColor="@color/bluePantone"
                android:textSize="@dimen/dip_13" />

            <TextView
                android:id="@+id/tvDateCashShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_5"
                android:textColor="@color/bluePantone"
                android:textSize="@dimen/dip_13"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:padding="@dimen/dip_5">

            <TextView
                android:id="@+id/tvAmountCashShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_5"
                android:textColor="@color/bluePantone"
                android:textSize="@dimen/dip_13" />

            <TextView
                android:id="@+id/tvTotalCashShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_5"
                android:textColor="@color/bluePantone"
                android:textSize="@dimen/dip_13" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
