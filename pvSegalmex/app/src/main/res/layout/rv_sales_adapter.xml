<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_110"
    app:cardCornerRadius="@dimen/dip_10"
    android:padding="@dimen/dip_5"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="@color/orangePantone"
    android:layout_marginBottom="@dimen/dip_10"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_65"
        android:weightSum="100"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:orientation="vertical"
            android:padding="@dimen/dip_5"
            android:layout_marginEnd="@dimen/dip_3"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_3"
                android:text="@string/dateCashShortview"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDateSale"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dip_3"
                android:textSize="@dimen/dip_13"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:orientation="vertical"
            android:padding="@dimen/dip_5"
            >
            <TextView
                android:text="@string/edtAmountWithdrawal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_3"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTotalSale"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dip_3"
                android:textSize="@dimen/dip_13"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:orientation="vertical"
            android:padding="@dimen/dip_5"
            android:layout_marginEnd="@dimen/dip_3"
            android:textSize="@dimen/dip_13"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_3"
                android:text="@string/itemMenu3"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13"
                />
            <TextView
                android:id="@+id/tvWayPaySale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dip_3"
                android:textSize="@dimen/dip_13"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dip_70"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical"
            android:padding="@dimen/dip_5"
            >
            <TextView
                android:text="@string/dialogTitleClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_2"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_13"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:orientation="vertical"
            android:padding="@dimen/dip_5"
            >
            <TextView
                android:id="@+id/tvClienteSaleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dip_1"
                android:textSize="@dimen/dip_13"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical"
            android:padding="@dimen/dip_5"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Utilidad %"
                android:layout_marginTop="@dimen/dip_1"
                android:textSize="@dimen/dip_13"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical"
            android:padding="@dimen/dip_5"
            >
            <TextView
                android:id="@+id/tvUtility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dip_1"
                android:textSize="@dimen/dip_13"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
