<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:orientation="vertical"
    android:paddingStart="@dimen/dip_24"
    android:paddingTop="@dimen/dip_56"
    android:paddingEnd="@dimen/dip_24"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/logop" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dip_17"
            android:padding="@dimen/dip_15"
            android:layout_weight="70"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                style="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edtUserPassword"
                android:textColorHint="@color/white"
                app:boxStrokeColor="@color/white"
                app:hintTextAppearance="@color/white">

                <EditText
                    android:layout_marginBottom="@dimen/dip_15"
                    android:id="@+id/edtUserNick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/segoeui"
                    android:hint="@string/userNick"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/dip_20" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_8"
                android:layout_marginBottom="@dimen/dip_8"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@color/white">

                <EditText
                    android:layout_marginBottom="@dimen/dip_15"
                    android:id="@+id/edtUserPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/segoeui"
                    android:hint="@string/userPassword"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/dip_20" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dip_24"
                android:background="@drawable/degradado_buttons"
                android:fontFamily="@font/segoeui"
                android:padding="@dimen/dip_12"
                android:text="@string/btnLoginText"
                android:textColor="@color/white"
                android:textSize="@dimen/dip_15" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
